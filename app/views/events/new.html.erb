<h1>Create a new event</h1>

<%= form_for(@events) do |f| %>
	<ul>
		<% @events.errors.full_messages.each do |error| %>
		<li><%= error %></li>
		<% end %>
	</ul>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.submit %>
	</p>
	<% end %>
